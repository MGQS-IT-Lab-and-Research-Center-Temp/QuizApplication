@model QuizApplication.Models.Answer.AnswerViewModel
@{
	ViewData["Title"] = "Edit Answer";
}

<div class="body">

	<div class="row">
		<div class="col-md-6">
			<form asp-action="Update">

				<div class="col-md-12 mb-3">
					<label class="control-label mb-1">Answer Picked:</label>
					<textarea asp-for="AnswerChoosed" type="text" class="form-control"></textarea>
					<span asp-validation-for="AnswerChoosed" class="text-danger"></span>
				</div>

				<div class="col-md-12">
					<button type="submit" class="btn btn-primary">Update</button>
				</div>

			</form>
		</div>
	</div>
</div>

