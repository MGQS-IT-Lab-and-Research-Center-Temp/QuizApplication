@model List<QuizApplication.Models.Question.QuestionViewModel>

@{
    ViewData["Title"] = "Question List";
    int count = 1;
}

<div>
    <a asp-controller="Question" asp-action="Create" class="btn btn-outline-primary">New Question</a>
</div>

@await Html.PartialAsync("_ListAlert", Model)

@if (Model is not null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Question</th>
                <th scope="col">Answer
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@count</td>
                    <td scope="row">@item.QuestionText</td>
                    <td scope="row">
                        <div class="btn-group">
                           <a asp-controller="Answer" asp-action="Create" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">Answer</a>
                        </div>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
}



